{
  "name": "discord-bot-base",
  "version": "1.0.0",
  "description": "Base repository for discord bots using supabase & discord.js for dynamic slash commands, events & realtime table subscriptions",
  "keywords": [
    "Discord",
    "Supabase",
    "Bot",
    "Realtime"
  ],
  "homepage": "https://github.com/seannhewitson/discord-bot-base#readme",
  "bugs": {
    "url": "https://github.com/seannhewitson/discord-bot-base/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seannhewitson/discord-bot-base.git"
  },
  "license": "ISC",
  "author": "SeannHewitson",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsup src --minify",
    "start": "set NODE_ENV=production&&node dist/index.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.5.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "nodemonConfig": {
    "ext": "ts",
    "ignore": [
      "dist",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "ts-node src/index.ts"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "arrowParens": "always",
    "endOfLine": "auto",
    "jsxSingleQuote": true,
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "",
      "^((commands)|(events)|(subscriptions)|(supabase)|(utils))(.*)$",
      "",
      "^((./)|(../))(.*)$"
    ],
    "importOrderSeparation": true,
    "importOrderCaseSensitive": true,
    "importOrderSortSpecifiers": true
  }
}
